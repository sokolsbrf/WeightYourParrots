<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/circle" />

    <item
        android:width="8dp"
        android:height="56dp"
        android:left="60dp"
        android:top="8dp">

        <rotate android:drawable="@drawable/arrow"
            android:fromDegrees="0"
            android:toDegrees="360"
            android:pivotX="50%"
            android:pivotY="100%" />

    </item>

    <item
        android:width="16dp"
        android:height="16dp"
        android:left="56dp"
        android:top="56dp">

        <shape android:shape="oval">
            <solid android:color="@color/colorPrimaryDark" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>

</layer-list>